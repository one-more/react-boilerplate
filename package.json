{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "react boilerplate hmr starter pack",
  "main": "src/index.js",
  "dependencies": {
    "axios": "^0.18.0",
    "babel-preset-env": "^1.6.1",
    "falx": "^1.1.5",
    "falx-bus": "^1.0.2",
    "flow-bin": "^0.69.0",
    "koa": "^2.5.0",
    "pre-commit": "^1.2.2",
    "ramda": "^0.25.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-hot-loader": "^4.0.1",
    "react-router": "^4.2.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.1",
    "@storybook/addon-links": "^3.4.1",
    "@storybook/addons": "^3.4.1",
    "@storybook/react": "^3.4.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-preset-flow": "^6.23.0",
    "babel-runtime": "^6.26.0",
    "concurrently": "^3.5.1",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "jsdom": "^11.7.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "nodemon": "^1.17.3",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  },
  "scripts": {
    "test": "jest --coverage",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "start": "concurrently \"webpack-dev-server --mode development --open\" \"npm run server\"",
    "start:prod": "webpack-dev-server --mode production --open",
    "server": "nodemon ./server/index.js"
  },
  "pre-commit": {
    "silent": true,
    "run": [
      "test"
    ]
  },
  "babel": {
    "presets": [
      "flow",
      "env"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "DEBUG": true
    },
    "roots": [
      "<rootDir>/src"
    ],
    "verbose": true,
    "moduleFileExtensions": [
      "js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!ramda)/"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "cacheDirectory": "<rootDir>/.cache"
  },
  "author": "one-more",
  "license": "GPL-3.0"
}
